<div class="container">
  <div class="row">
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
      Login
    </button>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Login</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>

            <div class="modal-body">
              <% if flash[:errors] %>
                <ul>
                  <% flash[:errors].each do |e|  %>
                    <li style="color: red;"><%= e %></li>
                  <% end %>
                </ul>
              <% end %>

              <%= form_tag sessions_path do %>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1"><%= label_tag :username %></span>
                </div>
                <input type="text" <%= text_field_tag :username %>
              </div>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1"><%= label_tag :password %></span>
                </div>
                <input type="password" <%= password_field_tag :password  %>
              </div>
              
            </div>

            <div class="modal-footer">
              <%= submit_tag "Enter"%>
            <% end %>
            </div>


          </div>
          <% if flash[:authorized] %>
            <p> <%= flash[:authorized] %> </p>
          <% end %>
      </div>
    </div>
  </div>
</div>
